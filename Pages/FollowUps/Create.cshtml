@page
@model outreach3.Pages.FollowUps.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FollowUp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ResidentId" class="control-label"></label>
                <input asp-for="@Model.ResidentId" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="FollowUp.DateDue" class="control-label"></label>
                <input asp-for="FollowUp.DateDue" class="form-control" />
                <span asp-validation-for="FollowUp.DateDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Status" class="control-label"></label>
                <select asp-for="@Model.Status" class="form-control">                    
                    <option selected>Scheduled</option> 
                    <option>Due</option>
                </select>
                <span asp-validation-for="@Model.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page-handler="Save" asp-route-residentId="@Request.Query["residentId"]" asp-route-missionId="@Request.Query["missionId"]" asp-route-churchId="@Request.Query["churchId"]" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-residentId="@Request.Query["residentId"]" asp-route-missionId="@Request.Query["missionId"]" asp-route-churchId="@Request.Query["churchId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
