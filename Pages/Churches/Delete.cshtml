}
else
{
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Site</h4>
        <div style="text-align:right;"><a asp-page="./Index">Return to Church List</a></div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Name)
        </dt>
